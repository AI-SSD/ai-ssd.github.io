      <TeamMember name="Jiawei Wang" image={jiaweiwang.src} linkedin="https://www.linkedin.com/in/wang-jiawei-a13621271/" personalWebsite="https://www.cisuc.uc.pt/en/people/jw-wang"/>
      <TeamMember name="Horácio França" image={placeholder.src} linkedin="https://www.linkedin.com/in/hor%C3%A1cio-fran%C3%A7a-0b492444/" googleScholar="https://scholar.google.com/citations?user=o6vP5I0AAAAJ&hl=en&oi=ao" personalWebsite="https://www.cisuc.uc.pt/en/people/h-franca"/>
      <TeamMember name="Marco Vieira" image={marcovieira.src} linkedin="https://www.linkedin.com/in/mvieira1975/" googleScholar="https://scholar.google.com/citations?user=l3cF0LoAAAAJ&hl=en&oi=ao" personalWebsite="https://www.cisuc.uc.pt/en/people/marco-vieira"/>
      <TeamMember name="Nuno Laranjeiro" image={nunolaranjeiro.src} googleScholar="https://scholar.google.com/citations?user=7XYIVVMAAAAJ&hl=en&oi=ao" personalWebsite="https://www.cisuc.uc.pt/en/people/nuno-laranjeiro"/>
    </div>
  </section>
