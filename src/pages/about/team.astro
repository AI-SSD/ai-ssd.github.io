<MainLayout content={{ title: 'Our Team | AI Secure Software Development' }}>
  <section class="container py-8 justify-items-center space-between">
    <h1 class="text-3xl font-bold mb-8">Principal Investigator</h1>
    <div class="flex justify-center">
      <TeamMember name="João R. Campos" image={joaorcampos.src} linkedin="https://www.linkedin.com/in/jo%C3%A3o-r-campos-38876015a/" googleScholar="https://scholar.google.com/citations?user=_kcaqoEAAAAJ" personalWebsite="https://www.cisuc.uc.pt/en/people/joao-campos" />
