---
import MainLayout from '../../layouts/main.astro';
import { TeamMember } from '../../components/TeamMember.tsx';
import joaodonato from '../../images/team/joaodonato.jpeg';
import joaorcampos from '../../images/team/joaorcampos.jpeg';
import charlesgoncalves from '../../images/team/charlesgoncalves.jpeg';
import josepereira from '../../images/team/josepereira.jpeg';
import nunolourenco from '../../images/team/nunolourenco.jpeg';
